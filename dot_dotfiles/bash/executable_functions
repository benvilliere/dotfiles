#!/bin/zsh

function verbose() {
  [[ $DOTFILES_VERBOSE_OUTPUT == 1 ]] && echo $1
}

function chezmoi_apply_and_source() {
  verbose "ğŸ¡ Applying chezmoi changes"
  chezmoi apply
  verbose "ğŸ’¾ Sourcing ~/.zshrc"
  source "${HOME}/.zshrc"
}

function chezmoi_cd_and_code() {
  verbose "ğŸ¡ Coming home"
  chezmoi cd
  code .
}
