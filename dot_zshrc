# Loading bash files
dotfiles=(
  "${HOME}/.dotfiles/bash/exports"
  "${HOME}/.dotfiles/bash/functions"
  "${HOME}/.dotfiles/bash/aliases"
  "${HOME}/.dotfiles/bash/theme"
  "${HOME}/.dotfiles/bash/plugins"
)

for file in "${dotfiles[@]}"; do
  if [[ -f "${file}" ]]; then
    \. "${file}"
  fi
done

